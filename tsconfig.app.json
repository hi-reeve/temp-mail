{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "pinia.d.ts",
        "auto-imports.d.ts",
        "components.d.ts",
        "typed-router.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "types": [
            "vite/client",
            "vite-plugin-vue-layouts/client",
            "unplugin-icons/types/vue",
            "vitest/globals"
        ]
    }
}
